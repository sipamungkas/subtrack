# ============================================
# Subnudge Backend - Environment Template for Docker
# Copy this file and fill in the values
# ============================================

# Application
NODE_ENV=production
PORT=3000

# Database (for docker-compose)
POSTGRES_USER=subnudge
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=subnudge

# Better Auth
BETTER_AUTH_SECRET=your_strong_random_secret_at_least_32_characters
BETTER_AUTH_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_BOT_USERNAME=SubnudgeBot
TELEGRAM_BOT_SECRET=shared_secret_between_bot_and_api

# External APIs (optional)
FIXER_API_KEY=your_fixer_api_key

# Admin
ADMIN_EMAIL=admin@example.com
